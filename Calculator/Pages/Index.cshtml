                return;
            }

            try {
                var parsedExpression = math.parse(expression);
            } catch (error) {
                alert("Error parsing the expression.");
                return;
            }

            var hasX = parsedExpression.filter(node => node.name === 'x').length > 0;
            var hasY = parsedExpression.filter(node => node.name === 'y').length > 0;

