                try {
                    var resultX = hasX ? parsedExpression.evaluate({ x: xValues[i] }) : 0;
                    var resultY = hasY ? parsedExpression.evaluate({ y: xValues[i] }) : 0;
                    yValuesX.push(resultX);
                    yValuesY.push(resultY);
                } catch (error) {
